# Test environment variables for markdown-vault MCP testing
# Source this file before starting the server: source .env.test

# API Key for authentication
export MARKDOWN_VAULT_API_KEY="test-api-key-for-mcp-testing-12345"

# Server configuration (pointing to our test server)
export MARKDOWN_VAULT_SERVER__HOST="127.0.0.1"
export MARKDOWN_VAULT_SERVER__PORT=27124
export MARKDOWN_VAULT_SERVER__HTTPS=true

# Vault configuration
export MARKDOWN_VAULT_VAULT__PATH="./test_vault"
export MARKDOWN_VAULT_VAULT__AUTO_CREATE=true

# SSL certificate paths
export MARKDOWN_VAULT_SECURITY__CERT_PATH="./test_certs/server.crt"
export MARKDOWN_VAULT_SECURITY__KEY_PATH="./test_certs/server.key"
export MARKDOWN_VAULT_SECURITY__AUTO_GENERATE_CERT=true

# Logging
export MARKDOWN_VAULT_LOGGING__LEVEL="INFO"
export MARKDOWN_VAULT_LOGGING__FORMAT="text"
